/* 顶部消息部分 */
Page{
  background-color: #F6F6F6;
}
.notice-title{
  float: left;
  /* border: 1rpx red solid; */
  margin-right: 10rpx;
}
.notice-icon{
  color: #42A5F5;
}
.notice-container{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-radius: 5px;
  width: 90%;
  margin: 0 auto;
  border: 1rpx solid #EAEAEA;
  padding-left: 40rpx;
}
.notice-item{
  height: 100%;
}
.notice-text{
  color: #6E6E6E;
  font-size: 33rpx;
}
.notice{
  float: left;
  width: 570rpx;
  height: 50rpx;
  /* border: 1rpx red solid; */
}
/* 轮播图部分 */
.index-swiper{
  width: 96%;
  margin: 20rpx auto;
  height: 260rpx;
}
.index-swiper-item,.index-swiper-item-img{
  width: 100%;
}
/* 时刻表部分 */
.times-title{
  display: block;
  text-align: center;
  font-weight: bold;
  font-size: 45rpx;
  color: #42A5F5;
  margin-bottom: 20rpx;
}
.time-table{
  width: 96%;
  margin: 0 auto;
}
.table-title{
  background-color: #5B9BD5;
  width: 100%;
}
.table-title-text{
  display: inline-block;
  height: 60rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;
}
.table-content-container{
  width: 100%;
  max-height: 450rpx;
}
.table-content{
  width: 100%;
}
.table-content:nth-child(odd){
  background-color: #FFFFFF;
}
.table-content:nth-child(even){
  background-color: #D9E2F3;
}
.table-content-text{
  display: inline-block;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
.table-title-text:nth-child(1),.table-title-text:nth-child(2),
.table-content-text:nth-child(1),.table-content-text:nth-child(2){
  width: 30%;
}
.table-title-text:nth-child(3),.table-content-text:nth-child(3){
  width: 40%;
}
/* 底部导航 */
.bottom{
  background-color: #FFFFFF;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}
.bottom-choice{
  text-align: center;
  float: left;
  color: #6E6E6E;
}
.common{
  width: 33%;
}
.manager{
  width: 25%;
}
.bottom-icon{
  display: block;
  font-size: 60rpx;
}
.bottom-text{
  font-size: 27rpx;
  display: block;
}
.on{
  color: #42A5F5;
}